<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.sourcecode.Controller">
   <children>
      <ImageView fx:id="background" fitHeight="720.0" fitWidth="1280.0">
         <image>
            <Image url="@bacground.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="car1" fitHeight="134.0" fitWidth="200.0" layoutX="35.0" layoutY="423.0">
         <image>
            <Image url="@car1.png" />
         </image>
      </ImageView>
      <ImageView fx:id="car2" fitHeight="134.0" fitWidth="200.0" layoutX="35.0" layoutY="557.0">
         <image>
            <Image url="@car2.png" />
         </image>
      </ImageView>
      <StackPane alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="150.0">
         <children>
            <ImageView fx:id="banner" fitHeight="300.0" fitWidth="400.0" opacity="0.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@fatality.png" />
               </image>
               <viewport>
                  <Rectangle2D />
               </viewport>
            </ImageView>
         </children>
      </StackPane>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="80.0" prefWidth="200.0" style="-fx-background-color: transparent;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <items>
            <Button fx:id="goButton" mnemonicParsing="false" onMouseClicked="#goClicked" prefHeight="80.0" prefWidth="120.0" style="-fx-padding: 20 30;" text="GO">
               <font>
                  <Font size="27.0" />
               </font>
            </Button>
            <Button fx:id="resetButton" mnemonicParsing="false" onMouseClicked="#resetClicked" prefHeight="80.0" prefWidth="120.0" text="RESET">
               <font>
                  <Font size="27.0" />
               </font>
            </Button>
            <TextField fx:id="textField1" prefHeight="80.0" prefWidth="150.0" promptText="10">
               <font>
                  <Font name="System Bold" size="31.0" />
               </font>
            </TextField>
            <TextField fx:id="textField2" prefHeight="80.0" prefWidth="150.0" promptText="8">
               <font>
                  <Font name="System Bold" size="31.0" />
               </font>
            </TextField>
        </items>
      </ToolBar>
   </children>
</AnchorPane>
